  description: "Experience that I have ever done.",
  experience: [
    {
      title: "Laboratory teaching assistant",
      company: "Institut Teknologi Telkom Purwokerto",
      date: "2021 - 2022",
      description:
        "Teaching assistant for the course of Algorithm and Programming",
      certificate: "certificate/alpro-certificate.png",
    },
    {
      title: "Laboratory teaching assistant",
      company: "Institut Teknologi Telkom Purwokerto",
      date: "2022 - 2023",
      description:
        "Teaching assistant for the course of Database Management System.",
      certificate: "certificate/basdat-certificate.png",
    },
    {
