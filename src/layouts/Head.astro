---
import { SEO } from "astro-seo";
const { title, description } = Astro.props;

interface HeadProps {
  title: string;
  description: string;
  type: string;
  image: string;
}
---

<head>
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title: title,
        description: description,
        type: "Portfolio",
        image: "https://avatars.githubusercontent.com/u/68181532?v=4",
      } as HeadProps,
    }}
  />
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="generator" content={Astro.generator} />

  <link rel="preconnect" href="https://fonts.bunny.net" />
  <link
    href="https://fonts.bunny.net/css?family=poppins:100,200,300,400,500"
    rel="stylesheet"
  />
  <link
    href="https://fonts.bunny.net/css?family=rubik:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet"
  />

  <!-- TAOS -->
  <script>
    document.documentElement.classList.add("js");
  </script>

  <!-- title -->
  <title>{title}</title>
</head>
